doctype html
/[if lt IE 7]
  html.no-js.ie6.oldie lang="en"
/[if IE 7]
  html.no-js.ie7.oldie lang="en"
/[if IE 8]
  html.no-js.ie8.oldie lang="en"
/[if gte IE 8]
  html.no-js lang="en"

head
  title = "Chicago Lot Management"
  == partial(:'shared/meta')
  == partial(:'shared/scripts')
  == css :application
  == css :advanced_desktop
  == js :advanced_form

  javascript:
    window.StripePricing = {
      plans : $.parseJSON("#{@pricing}")
    }

body

  form
    input type="hidden" data-stripe="currency" id="plan_currency" name="plan-currency" value="USD"
    .row
      .subscription-details-container
        section.form-bar
          .subscription-name-container
            .select-wrap.plan
              select data-stripe="plan" id="plan" name="plan" class="plan"
                option value="kale-fan" Observation
                option value="kale-krazy" Basic
                option value="kale-krazy" Premium

          .subscription-pricing-container
            .subscription-pricing
              span.subscription-price $20.99
              span.subscription-frequency
              | /month

        section.form-errors.form-errors__hidden
          strong Oops! The following fields appear to be invalid:
          ul

        section.addons-container.hide-form-onsuccess

        section.billing-info-container.hide-form-onsuccess
          .row
            h3.section-title--billing Billing Information

          div#credit-card.panel
            .row.customer-fields--email
              .form-input.form-input__email
                input type="text" data-stripe="email" id="email" name="email" class="form-input__required" placeholder="Email"

            .row.customer-fields--card-number
              .form-input.form-input__number
                input type="text" data-stripe="number" id="number" name="number" class="form-input__required" placeholder="4111 1111 1111 1111"
                span.icon.icon-card.icon-card__generic
                span.icon.icon-lock

            .row.customer-fields--card-details
              .form-input.form-input__selection.customer-fields--card-expiry.form-input__month.form-input__year
                  input type="text" data-stripe="month" id="month" name="month" placeholder="MM" maxlength="2" class="form-input__required"
                  input type="text" data-stripe="year" id="year" name="year" placeholder="YY" maxlength="2" class="form-input__required"

              .form-input.customer-fields--card-cvv.form-input__cvv
                input type="text" data-stripe="cvv" id="cvv" name="cvv" class="form-input__required" placeholder="CVV" maxlength="4"

            .row.customer-fields--address.form-input__address
              .form-input
                input type="text" data-stripe="address" id="address" name="address" class="form-input__required" placeholder="Address"

            .row.customer-fields--city
              .form-input.form-input__city
                input type="text" data-stripe="city" id="city" name="city" class="form-input__required" placeholder="City"

            .row
              .form-input.form-input__state
                .select-wrap
                  select data-stripe="state" id="state" name="state" class="form-input__required" disabled="true"
                    option Illinois

              .form-input.form-input__postal-code
                input type="text" data-stripe="postal_code" id="postal_code" name="postal-code" class="form-input__required" placeholder="Zip Code"


      .order-summary-container
        header.order-summary-title
          h2 Order Summary
        section.order-summary-details
          .row.order-summary

            div.tax
              | Tax
              span.total-amount
                span.symbol data-stripe="currency_symbol"
                span data-stripe="tax_now"
            div.total
              | Total
              span.total-amount
                span data-stripe="currency_symbol"
                span data-stripe="total_now" id="total_now" name="total-now" class="order-summary--total"

              .confirmation
                .confirmation-body
                  h2.confirmation-messaging
                    span Thank you for subscribing.
                    br You will be billed
                    span data-stripe="currency_symbol"
                    span data-stripe="total_next" name="total-next"
                    span  every month.

          .row.hide-form-onsuccess
            input type='submit' id="subscribe" class="btn-submit" value="Subscribe"
            input type="hidden" id="stripe-token" name="stripe-token"

