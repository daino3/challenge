source 'https://rubygems.org'

# Framework
gem 'sinatra', require: 'sinatra/base'
gem 'sinatra-contrib'
gem 'sinatra-support'
gem 'sinatra-partial', require: 'sinatra/partial'
gem 'slim'

# Assets
gem 'sass'
gem 'sinatra-assetpack'

# Misc
gem 'rake'
gem 'stripe'
gem 'hashie'
gem 'thin'

# Database
gem 'pg'
gem 'activerecord'
gem 'activesupport'

group :development, :test do
  gem 'pry'
end

group :test do
  gem 'sqlite3'
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end


ruby '2.1.2'
